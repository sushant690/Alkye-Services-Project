<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_border"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp">
<androidx.cardview.widget.CardView
    android:layout_width="160dp"
    android:layout_height="190dp"
    android:backgroundTint="@color/black">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/firefly_crop2"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/cornerFamilyHorizontral"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            app:shapeAppearanceOverlay="@style/circular"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/insta" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Ultimate Guide To Simplifying Your Routine With Generative AI Automation!"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="12dp"
        android:id="@+id/caption"
        android:fontFamily="@font/strawford_regular"
        android:textColor="@color/black"/>
</LinearLayout>